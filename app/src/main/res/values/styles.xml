<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_500</item>
    </style>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_deactivation</item>
        <item name="android:background">@drawable/bg_post_comment_text_label</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/surface_500</item>
        <item name="android:background">@drawable/bg_global_btn_primary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextViewCancelButtonPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextViewHintPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextViewHeaderPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextViewHeaderSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewHintSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/strong_explanation</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@drawable/bg_global_btn_secondary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextViewErrorPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextViewDialogTitlePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextViewDialogContentPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="TextViewDialogContentPrimaryAlignStart" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="BottomNavigationViewMain" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bg_main_bn</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextColor">@drawable/selector_bn_main_item_color</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@drawable/selector_bn_main_item_color</item>
    </style>

    <style name="SectionLinePrimary">
        <item name="android:background">@color/description</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ImageMyPageDepth">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:src">@drawable/ic_my_page_depth</item>
    </style>

    <style name="TextViewTitlePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextViewTitleSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextViewBodyPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/strong_explanation</item>
    </style>

    <style name="RadioButtonDialogCreateScheduleColorIndicator" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="ButtonDialogCreateScheduleTime" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/bg_create_schedule_btn_selected_time</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextViewDialogHintPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/strong_explanation</item>
    </style>

    <style name="TextViewDescriptionPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="BackgroundAlertDialogPrimary" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/background_500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="BackgroundBottomSheetDialogPrimary" parent="Theme.Design.BottomSheetDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_500</item>
        <item name="android:paddingVertical">32dp</item>
    </style>

    <style name="TextViewPostTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewPostPage" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:backgroundTint">@color/surface_700</item>
    </style>

    <style name="ImageViewGlobalAppLogo">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_app_logo</item>
    </style>

    <style name="TextViewGlobalTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:text">@string/app_name_en</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewGlobalSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_700</item>
    </style>

    <style name="LinearLayoutGlobalTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
