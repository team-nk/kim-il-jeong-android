<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_item_comment_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_comment_account_id"
            style="@style/TextViewPostTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/image_item_comment_profile"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="egors" />

        <TextView
            android:id="@+id/tv_itrem_comment_content"
            style="@style/TextViewBodyPrimary"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_item_comment_account_id"
            app:layout_constraintTop_toTopOf="@id/tv_item_comment_account_id"
            tools:text="zㅜㄴ영아..?" />

        <TextView
            android:id="@+id/tv_item_comment_time_created"
            style="@style/TextViewHintSecondary"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tv_item_comment_account_id"
            app:layout_constraintTop_toBottomOf="@id/tv_item_comment_account_id"
            tools:text="18:00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
