<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".di.application.KimIlJeongApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kimiljeongandroid"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">
        <activity
            android:name=".presentation.view.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="$GOOGLE_MAPS_API_KEY" />

        <activity
            android:name=".presentation.view.changepassword.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.changeuserinformation.ChangeUserInformationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.start.StartActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.postinspect.PostInspectActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.comment.CommentActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.postcreate.PostCreateActivity"
            android:exported="true" />
    </application>
</manifest>
